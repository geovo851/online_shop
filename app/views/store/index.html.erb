<% provide(:goods, 'active') %>

<div class="container-fluid"> 
  <div class="row">
      <div class="page-header">
        <h1>Goods</h1>
      </div>

      <div class="row">
        <div class="col-sm-10 col-md-8">
          <% if @goods.empty? %>
            <b>No goods in store</b>
          <% else %>

            <div class="table-responsive">
              <table class="table ">
                <tbody id="goods">
                  <%= render partial: "good", :collection => @goods, :as => :good %>
                </tbody>
              </table>
            </div>
            <div id="paginator", class="paginate-centre"><%= paginate @goods, :remote => true %></div>
          <% end %>
        </div>
      </div>

  </div>
</div>